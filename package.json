  "bugs": {
    "url": "https://github.com/AlexanderSergan/checkin-telegram-bot/issues"
  },
  "homepage": "https://github.com/AlexanderSergan/checkin-telegram-bot#readme",
  "dependencies": {
    "@types/node-telegram-bot-api": "^0.30.3",
    "node-telegram-bot-api": "^0.30.0"
  },
  "devDependencies": {
    "husky": "^1.1.4",
    "nodemon": "^1.18.6",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
